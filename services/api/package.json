    "fastify": "^4.28.1",
    "pino-pretty": "^11.2.2",
    "pg": "^8.12.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.7",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  }
